
@{
    ViewData["Title"] = "List Ticket";
    Layout = "_MyLayout";
}
@section Styles
{
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Karma">
    <style>
        body, h1, h2, h3, h4, h5, h6 {
            font-family: "Karma", sans-serif
        }

        .w3-bar-block .w3-bar-item {
            padding: 20px
        }
    </style>
}

@model List<Schedule>;

<!-- !PAGE CONTENT! -->
<div class="w3-main w3-content w3-padding" style="max-width:1200px;margin-top:100px">
    <div class="w3-row-padding w3-padding-16 w3-center" id="food">
        <h3>Desnation: @ViewBag.countryto</h3>
    </div>
    <!-- First Photo Grid-->
    @foreach (var item in Model)
    {
        <form asp-controller="Ticket" asp-action="BookingTicket" method="post" style="display:inline-block;width:30%">
            <input type="hidden" value="@item.ScheduleId" name="scheId" />
            <input type="hidden" value="@GlobalVariables.UserId" name="userId"  />

            <div class="w3-row-padding w3-padding-16 w3-center" id="food">
                <div class="w3-quarter" style="width:100%">
                    <img src="https://booknookuk.com/wp-content/uploads/2019/10/ticket.jpg" alt="Sandwich" style="width:100%">
                    <h4><b>Country From:</b> @item.CountryFrom</h4>
                    <h4><b>Country To:</b> @item.CountryTo</h4>
                    <h4><b>Station:</b> @item.StationName</h4>
                    <h4><b>Seat</b>: @item.Seat</h4>
                    <button class="btn btn-primary">Book</button>
                </div>
            </div>
        </form>
    }


        @*Pagination
            <div class="w3-center w3-padding-32">
                <div class="w3-bar">
                    <a href="#" class="w3-bar-item w3-button w3-hover-black">«</a>
                    <a href="#" class="w3-bar-item w3-black w3-button">1</a>
